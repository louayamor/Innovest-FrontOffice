{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/auth/register.css') }}">
{% endblock %}

{% block body %}
<div class="wrapper">
    <section class="container">
        <div class="row">
            <div class="col">

                <h1>Register</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    <div class="input-box">
                        <label for="{{ registrationForm.username.vars.id }}">Username</label>
                        {{ form_widget(registrationForm.username) }}
                    </div>
                    <div class="input-box">
                        <label for="{{ registrationForm.email.vars.id }}">Email</label>
                        {{ form_widget(registrationForm.email) }}
                    </div>
                    <div class="input-box">
                        <label for="{{ registrationForm.plainPassword.vars.id }}">Password</label>
                        {{ form_widget(registrationForm.plainPassword) }}
                    </div>
                    <div class="input-box">
                        <label for="{{ registrationForm.agreeTerms.vars.id }}">Agree to Terms</label>
                        {{ form_widget(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn">Register</button>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </section>
</div>
{% endblock %}
