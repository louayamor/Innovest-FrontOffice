{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">User Profile</h1>
                <div class="profile-details">
                    <img src="{{ asset('uploads/' ~ uProfile.profileImage) }}" alt="Profile Image" class="profile-image">
                    <p><strong>First Name:</strong> {{ uProfile.firstName }}</p>
                    <p><strong>Last Name:</strong> {{ uProfile.lastName }}</p>
                    <p><strong>Age:</strong> {{ uProfile.age }}</p>
                    <p><strong>Country:</strong> {{ uProfile.country }}</p>
                    <p><strong>Bio:</strong> {{ uProfile.bio }}</p>
                    <p><strong>Phone Number:</strong> {{ uProfile.phoneNumber }}</p>
                    <p><strong>Gender:</strong> {{ uProfile.gender }}</p>
                </div>
                <div class="social-links">
                    <ul class="social-list">
                        <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
                <div class="buttons">
                    <a href="{{ path('app_my_businesses') }}" class="btn btn-success">My Businesses</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
